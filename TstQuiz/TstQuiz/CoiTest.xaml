        <RadioButton GroupName="AnswersGroup" Name="AnswerRb3" Margin="0,352,60.667,0" FontSize="20" Checked="Anserw3_Checked">алюминиевые</RadioButton>
        <Button Margin="626,352,36,20" Name="NextBtn" Click="NextBtn_Click" Grid.ColumnSpan="2">Next→</Button>
        <Button Margin="0,0,556.667,372" x:Name="BackBtn" Content="←Back" Click="BackBtn_Click"/>
    </Grid>
</Window>
