        xmlns:local="clr-namespace:TstQuiz"
        mc:Ignorable="d"
        Title="CoiTest" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="229*"/>
            <ColumnDefinition Width="35*"/>
        </Grid.ColumnDefinitions>
        <Label Content="/6" Margin="52,0,0,382" FontSize="16" Grid.Column="1"></Label>
        <Label Name="PageNumberLb" Content="1" Margin="40.333,0,36,382" FontSize="16" Grid.Column="1"/>
