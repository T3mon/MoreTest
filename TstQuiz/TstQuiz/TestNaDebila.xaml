<Window x:Class="TstQuiz.TestNaDebila"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TstQuiz"
        mc:Ignorable="d"
         Title="TestNaDebila" Height="450" Width="800" MaxHeight="450" MaxWidth="800" Background="#FF1E1E1E">
    <Grid>
        <Label Content="1. В аквариуме 12 рыб, и все, кроме 9, умерли. Сколько живых рыб осталось в аквариуме?" Foreground="WhiteSmoke" RenderTransformOrigin="0.5,0.5" Width="754">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="-4.929"/>
                    <RotateTransform/>
                    <TranslateTransform Y="33.415"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Button x:Name="FirstYes" Content="9" Height="30" Width="50" Margin="-600,100,50,54" Click="FirstYes_Click"/>
        <Button x:Name="FirstNo"  Content ="3" Height="30" Width="50" Margin="-400,-85,50,54" Click="FirstNo_Click"/>
        <Button x:Name="FirstNox2"  Content ="1" Height="30" Width="50" Margin="293,174,449,215" Click="FirstNox2_Click"/>
    </Grid>
</Window>
